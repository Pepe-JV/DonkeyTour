{% extends 'base.html.twig' %}

{% block title %}Categor√≠as - ZenPaw Tech{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto">
    <!-- Hero Section -->
    <div class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Categor√≠as
        </h1>
        <p class="text-lg text-gray-600">
            Explora nuestros posts organizados por categor√≠as
        </p>
    </div>

    {% if categories is empty %}
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <div class="text-6xl mb-4">üìÇ</div>
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">No hay categor√≠as disponibles</h2>
            <p class="text-gray-500">¬°Pronto habr√° m√°s contenido organizado!</p>
        </div>
    {% else %}
        <!-- Categories Grid -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for category in categories %}
                <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-blue-300">
                    <div class="p-6">
                        <div class="flex items-start justify-between mb-3">
                            <h2 class="text-2xl font-bold text-gray-900">
                                <a href="{{ path('app_category_show', {'slug': category.slug}) }}"
                                   class="text-blue-600 hover:text-blue-800 no-underline">
                                    {{ category.name }}
                                </a>
                            </h2>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                {{ category.posts|length }} posts
                            </span>
                        </div>

                        {% if category.description %}
                            <p class="text-gray-600 text-sm mb-4">
                                {{ category.description }}
                            </p>
                        {% endif %}

                        <a href="{{ path('app_category_show', {'slug': category.slug}) }}"
                           class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm no-underline">
                            Ver posts
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <!-- Back to Home -->
    <div class="mt-12 text-center">
        <a href="{{ path('app_blog') }}"
           class="inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg no-underline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver al inicio
        </a>
    </div>
</div>
{% endblock %}
