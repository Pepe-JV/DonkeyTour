{# Indicamos que el tema del formulario se define en este mismo archivo #}
{% form_theme form _self %}

{# ========================================== #}
{# 1. DISE√ëO DE LA FILA (Label + Input)       #}
{# ========================================== #}
{% block form_row %}
    <div class="mb-6 relative group">
        {# Etiqueta (Label) #}
        {{ form_label(form, null, {
            'label_attr': {'class': 'block text-[#8B5E3C] text-xs font-bold uppercase tracking-widest mb-2 ml-2 transition-colors group-focus-within:text-[#764f32]'}
        }) }}
        
        {# Campo de entrada (Input / Select) #}
        {{ form_widget(form, {
            'attr': {
                'class': 'w-full bg-stone-50 border-2 border-stone-100 text-[#3E2F28] font-medium rounded-2xl px-5 py-3.5 focus:outline-none focus:ring-0 focus:border-[#4A90A4] transition-all duration-300 placeholder:text-stone-300 hover:bg-stone-100 focus:bg-white shadow-inner'
            }
        }) }}
        
        {# Errores del campo #}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{# ========================================== #}
{# 2. DISE√ëO DE LOS ERRORES DE VALIDACI√ìN     #}
{# ========================================== #}
{% block form_errors %}
 {% if errors is defined and errors|length > 0 %}
        <ul class="mt-2 space-y-1 animate-fade-in-down">
            {% for error in errors %}
                <li class="text-xs text-red-500 font-bold bg-red-50 px-3 py-2 rounded-xl border border-red-100 flex items-center gap-2">
                    <span aria-hidden="true">‚ö†Ô∏è</span> {{ error.message }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

{# ========================================== #}
{# 3. ESTRUCTURA PRINCIPAL DEL FORMULARIO     #}
{# ========================================== #}
{{ form_start(form, {'attr': {'class': 'w-full', 'novalidate': 'novalidate'}}) }}

    {# Si tienes muchos campos, grid-cols-2 los pone en dos columnas en PC #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-2">
        {{ form_rest(form) }}
    </div>

    {# Bot√≥n de enviar #}
    <div class="mt-8 pt-8 border-t border-stone-100">
        <button type="submit" class="w-full md:w-auto md:min-w-[250px] mx-auto flex items-center justify-center gap-3 px-8 py-4 bg-[#8B5E3C] hover:bg-[#764f32] text-white font-bold rounded-2xl transition-all duration-300 shadow-[0_10px_20px_rgba(139,94,60,0.3)] transform hover:-translate-y-1">
            <span>{{ button_label|default('Confirmar Reserva') }}</span>
            <span aria-hidden="true" class="text-xl">üê¥</span>
        </button>
    </div>

{{ form_end(form) }}
