{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - ZenPaw Tech{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
        <a href="{{ path('app_blog') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200 font-medium no-underline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver al blog
        </a>
    </div>

    <!-- Article Card -->
    <article class="bg-white rounded-xl shadow-2xl overflow-hidden border border-gray-100">
        <!-- Header with gradient -->
        <header class="bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-700 px-8 py-16 md:px-12 md:py-20 relative overflow-hidden">
            <!-- Decorative background -->
            <div class="absolute inset-0 bg-black opacity-5 bg-[radial-gradient(ellipse_at_top_right,_transparent_0%,_rgba(0,0,0,0.3)_100%)]"></div>
            <div class="absolute top-0 right-0 w-96 h-96 bg-white opacity-10 rounded-full -translate-y-1/2 translate-x-1/2 blur-3xl"></div>

            <div class="max-w-3xl relative z-10">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight drop-shadow-2xl">
                    {{ post.title }}
                </h1>
                <div class="flex flex-wrap items-center gap-4 text-blue-50">
                    <div class="flex items-center bg-white bg-opacity-25 rounded-full px-5 py-2.5 backdrop-blur-md shadow-lg border border-white border-opacity-30">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                        </svg>
                        <span class="font-semibold">{{ post.publishedAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% if post.author %}
                    <div class="flex items-center bg-white bg-opacity-25 rounded-full px-5 py-2.5 backdrop-blur-md shadow-lg border border-white border-opacity-30">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                        <span class="font-semibold">{{ post.author }}</span>
                    </div>
                    {% endif %}
                    <div class="flex items-center bg-white bg-opacity-25 rounded-full px-5 py-2.5 backdrop-blur-md shadow-lg border border-white border-opacity-30">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <span class="font-semibold">{{ (post.content|length / 5)|round }} min lectura</span>
                    </div>
                </div>

                {% if post.categories is not empty %}
                <div class="mt-4 flex flex-wrap gap-2">
                    {% for category in post.categories %}
                        <a href="{{ path('app_category_show', {'slug': category.slug}) }}"
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg text-sm font-medium text-white transition-all duration-200 no-underline backdrop-blur-md border border-white border-opacity-20">
                            üìö {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </header>

        <!-- Content -->
        <div class="px-8 py-12 md:px-12 md:py-16">
            <div class="prose prose-lg max-w-none">
                <div class="text-gray-800 leading-relaxed text-lg space-y-6">
                    {{ post.content|nl2br }}
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="bg-gray-50 px-8 py-8 md:px-12 border-t border-gray-200">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
                <!-- Back Button -->
                <a href="{{ path('app_blog') }}"
                   class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 no-underline">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Volver al inicio
                </a>

                <!-- Metadata -->
                <div class="flex items-center gap-3 text-sm">
                    <span class="text-gray-600">Slug:</span>
                    <code class="px-3 py-1.5 bg-gray-200 text-gray-800 rounded-md font-mono text-xs border border-gray-300">
                        {{ post.slug }}
                    </code>
                </div>
            </div>

            <!-- Share Section (opcional) -->
            <div class="mt-8 pt-8 border-t border-gray-200">
                <p class="text-sm text-gray-600 mb-4 font-medium">Compartir este art√≠culo:</p>
                <div class="flex gap-3">
                    <button class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-500 hover:bg-blue-600 text-white transition-colors duration-200 shadow-md hover:shadow-lg">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                    </button>
                    <button class="flex items-center justify-center w-10 h-10 rounded-full bg-sky-500 hover:bg-sky-600 text-white transition-colors duration-200 shadow-md hover:shadow-lg">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                        </svg>
                    </button>
                    <button class="flex items-center justify-center w-10 h-10 rounded-full bg-blue-700 hover:bg-blue-800 text-white transition-colors duration-200 shadow-md hover:shadow-lg">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    </button>
                </div>
            </div>
        </footer>
    </article>

    <!-- Related Posts Section (opcional - placeholder) -->
    <div class="mt-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Tambi√©n te puede interesar</h3>
        <div class="bg-white rounded-lg shadow-md p-8 text-center border border-gray-100">
            <p class="text-gray-600">Pr√≥ximamente m√°s art√≠culos relacionados</p>
        </div>
    </div>
</div>
{% endblock %}
