{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - ZenPaw Tech{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto">
    <!-- Category Header -->
    <div class="mb-12">
        <div class="mb-4">
            <a href="{{ path('app_category_index') }}"
               class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm no-underline">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Todas las categor√≠as
            </a>
        </div>

        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {{ category.name }}
        </h1>

        {% if category.description %}
            <p class="text-lg text-gray-600">
                {{ category.description }}
            </p>
        {% endif %}

        <p class="text-sm text-gray-500 mt-2">
            {{ posts|length }} post{% if posts|length != 1 %}s{% endif %} en esta categor√≠a
        </p>
    </div>

    {% if posts is empty %}
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <div class="text-6xl mb-4">üìù</div>
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">No hay posts en esta categor√≠a</h2>
            <p class="text-gray-500">¬°Pronto habr√° contenido nuevo!</p>
        </div>
    {% else %}
        <!-- Posts List -->
        <div class="grid gap-8">
            {% for post in posts %}
                <article class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-blue-300 group">
                    <!-- Card Header with gradient -->
                    <div class="bg-gradient-to-br from-blue-600 via-blue-500 to-indigo-600 p-8 relative overflow-hidden">
                        <div class="absolute inset-0 bg-black opacity-5"></div>

                        <h2 class="text-3xl md:text-4xl font-extrabold mb-3 relative z-10">
                            <a href="{{ path('app_blog_show', {'slug': post.slug}) }}"
                               class="text-white hover:text-yellow-300 transition-all duration-300 no-underline drop-shadow-lg leading-tight block">
                                {{ post.title }}
                            </a>
                        </h2>

                        <div class="flex items-center text-blue-50 text-sm font-medium bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-4 py-2 inline-flex relative z-10">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                            </svg>
                            <span>{{ post.publishedAt|date('d/m/Y H:i') }}</span>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="p-6">
                        {% if post.summary %}
                            <p class="text-gray-700 text-base leading-relaxed mb-6">
                                {{ post.summary }}
                            </p>
                        {% else %}
                            <p class="text-gray-700 text-base leading-relaxed mb-6">
                                {{ post.content|slice(0, 250) }}{% if post.content|length > 250 %}...{% endif %}
                            </p>
                        {% endif %}

                        <!-- Card Footer -->
                        <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                            <a href="{{ path('app_blog_show', {'slug': post.slug}) }}"
                               class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg no-underline">
                                <span>Leer m√°s</span>
                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>

                            {% if post.author %}
                                <div class="text-sm text-gray-600">
                                    <span class="font-medium">Por:</span> {{ post.author }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
