{% extends 'base.html.twig' %}

{% block title %}Servicio #{{ service.id }} ¬∑ DonkeyTour Admin{% endblock %}
{% block page_title %}Detalle del Servicio{% endblock %}

{% block body %}
<div class="space-y-8">

    {# Flashes #}
    {% for type, messages in app.flashes %}
        {% for msg in messages %}
            <div class="px-5 py-3 rounded-2xl text-sm font-bold {{ type == 'error' ? 'bg-red-50 text-red-600 border border-red-100' : 'bg-green-50 text-green-600 border border-green-100' }}">
                {{ msg }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Cabecera #}
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
        <div>
            <span class="text-[#4A90A4] font-bold tracking-widest uppercase text-xs">Servicio #{{ service.id }}</span>
            <h1 class="text-2xl md:text-3xl font-bold text-[#3E2F28] mt-1">{{ service.type }}</h1>
            <p class="text-stone-400 text-sm mt-1">Creado el {{ service.createdAt ? service.createdAt|date('d/m/Y H:i') : '‚Äî' }}</p>
        </div>
        <div class="flex gap-3">
            <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="bg-[#8B5E3C] hover:bg-[#764f32] text-white px-5 py-2.5 rounded-2xl font-bold text-sm transition-all shadow-md">
                Editar
            </a>
            <a href="{{ path('app_admin_service_index') }}" class="px-5 py-2.5 bg-white border border-stone-200 text-stone-500 text-sm font-bold rounded-2xl hover:border-stone-400 hover:text-stone-800 transition-all shadow-sm">
                ‚Üê Volver
            </a>
        </div>
    </div>

    {# Info General #}
    <div class="bg-white/80 backdrop-blur-xl border border-stone-100 rounded-3xl p-8 shadow-sm">
        <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-6">Informaci√≥n General</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Tipo</p>
                {% set typeColor = {
                    'Tour Guiado': 'bg-blue-50 text-blue-600 border-blue-100',
                    'Tour': 'bg-blue-50 text-blue-600 border-blue-100',
                    'Despedida': 'bg-pink-50 text-pink-600 border-pink-100',
                    'Burroterapia': 'bg-emerald-50 text-emerald-600 border-emerald-100',
                    'Apadrinamiento': 'bg-amber-50 text-amber-600 border-amber-100',
                } %}
                <span class="inline-block px-3 py-1 rounded-lg text-xs font-bold uppercase border {{ typeColor[service.type] | default('bg-stone-50 text-stone-500 border-stone-100') }}">
                    {{ service.type }}
                </span>
            </div>
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Precio Base</p>
                <p class="text-2xl font-bold text-[#764F32]">{{ service.basePrice }}‚Ç¨</p>
            </div>
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Duraci√≥n</p>
                <p class="text-lg font-bold text-[#3E2F28]">{{ service.duration ? service.duration|date('H:i') : '‚Äî' }}h</p>
            </div>
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Aforo M√°ximo</p>
                <p class="text-lg font-bold text-[#3E2F28]">üë• {{ service.maxAphor }} personas</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-8">
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Idioma</p>
                {% set langMap = {'es': 'üá™üá∏ Espa√±ol', 'en': 'üá¨üáß Ingl√©s', 'fr': 'üá´üá∑ Franc√©s', 'de': 'üá©üá™ Alem√°n'} %}
                <p class="text-sm font-bold text-[#3E2F28]">{{ langMap[service.leenguage] | default(service.leenguage) }}</p>
            </div>
            <div>
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Burro Asignado</p>
                {% if service.donkey %}
                    <p class="text-sm font-bold text-[#3E2F28]">üê¥ {{ service.donkey.nombre }}</p>
                {% else %}
                    <p class="text-sm text-stone-300">Sin asignar</p>
                {% endif %}
            </div>
            <div class="md:col-span-2">
                <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">√öltima actualizaci√≥n</p>
                <p class="text-sm text-stone-500">{{ service.updatedAt ? service.updatedAt|date('d/m/Y H:i') : '‚Äî' }}</p>
            </div>
        </div>

        <div class="mt-8 pt-6 border-t border-stone-100">
            <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Descripci√≥n</p>
            <p class="text-stone-600 leading-relaxed">{{ service.description }}</p>
        </div>
    </div>

    {# Campos Espec√≠ficos #}
    {% set svc = service %}
    {% if svc is instanceof('App\\Entity\\Tour') or svc is instanceof('App\\Entity\\Despedida') or svc is instanceof('App\\Entity\\Therapy') or svc is instanceof('App\\Entity\\Sponsorship') %}
        <div class="bg-white/80 backdrop-blur-xl border border-stone-100 rounded-3xl p-8 shadow-sm">
            <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-6">Campos Espec√≠ficos</p>

            {% if svc is instanceof('App\\Entity\\Tour') %}
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Nombre del Tour</p>
                        <p class="text-lg font-bold text-[#3E2F28]">{{ svc.name }}</p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Paradas</p>
                        <p class="text-lg font-bold text-[#3E2F28]">{{ svc.stops }}</p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Audio-gu√≠a</p>
                        <span class="px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider {{ svc.audioExplanation ? 'bg-green-50 text-green-600 border border-green-100' : 'bg-stone-50 text-stone-400 border border-stone-100' }}">
                            {{ svc.audioExplanation ? 'Incluida' : 'No incluida' }}
                        </span>
                    </div>
                </div>
                <div class="mt-6">
                    <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Itinerario</p>
                    <p class="text-stone-600 leading-relaxed">{{ svc.itinerary }}</p>
                </div>
                {% if svc.details %}
                    <div class="mt-6">
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Detalles</p>
                        <p class="text-stone-600 leading-relaxed">{{ svc.details }}</p>
                    </div>
                {% endif %}

            {% elseif svc is instanceof('App\\Entity\\Despedida') %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Tem√°tica</p>
                        <p class="text-lg font-bold text-[#3E2F28]">{{ svc.tematica }}</p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Lugar</p>
                        <p class="text-lg font-bold text-[#3E2F28]">{{ svc.place }}</p>
                    </div>
                </div>
                {% if svc.details %}
                    <div class="mt-6">
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Detalles</p>
                        <p class="text-stone-600 leading-relaxed">{{ svc.details }}</p>
                    </div>
                {% endif %}

            {% elseif svc is instanceof('App\\Entity\\Therapy') %}
                <div>
                    <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-1">Lugar de la sesi√≥n</p>
                    <p class="text-lg font-bold text-[#3E2F28]">{{ svc.place }}</p>
                </div>
                {% if svc.details %}
                    <div class="mt-6">
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Detalles</p>
                        <p class="text-stone-600 leading-relaxed">{{ svc.details }}</p>
                    </div>
                {% endif %}

            {% elseif svc is instanceof('App\\Entity\\Sponsorship') %}
                {% if svc.details %}
                    <div>
                        <p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-2">Detalles del apadrinamiento</p>
                        <p class="text-stone-600 leading-relaxed">{{ svc.details }}</p>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    {% endif %}

    {# Reservas vinculadas #}
    {% if service.reserves|length > 0 %}
        <div class="bg-white/80 backdrop-blur-xl border border-stone-100 rounded-3xl p-8 shadow-sm">
            <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-4">Reservas vinculadas ({{ service.reserves|length }})</p>
            <div class="space-y-3">
                {% for reserve in service.reserves %}
                    <div class="flex items-center justify-between p-4 bg-stone-50 rounded-2xl">
                        <div class="flex items-center gap-4">
                            <span class="font-bold text-[#3E2F28]">#{{ reserve.id }}</span>
                            <span class="text-sm text-stone-500">{{ reserve.reserveDate|date('d/m/Y H:i') }}</span>
                            <span class="px-2 py-0.5 rounded-full text-[10px] font-bold {{ reserve.state ? 'bg-green-50 text-green-600' : 'bg-red-50 text-red-500' }}">
                                {{ reserve.state ? 'Activa' : 'Cancelada' }}
                            </span>
                        </div>
                        <a href="{{ path('app_admin_reserve_show', {'id': reserve.id}) }}" class="text-[#4A90A4] text-xs font-bold hover:underline">Ver ‚Üí</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
