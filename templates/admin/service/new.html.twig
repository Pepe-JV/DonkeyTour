{% extends 'base.html.twig' %}

{% block title %}Nuevo {{ type_label }} · DonkeyTour Admin{% endblock %}
{% block page_title %}Crear {{ type_label }}{% endblock %}

{% block body %}
<div class="bg-[#FCFAF7] p-4">
    <div class="w-full max-w-7xl mx-auto">

        {# Cabecera #}
        <div class="flex items-center justify-between mb-4 px-4">
            <div>
                <h1 class="text-3xl font-extrabold text-[#3E2F28] tracking-tight font-serif">Nuevo {{ type_label }}</h1>
                <p class="text-stone-400 text-[10px] font-bold uppercase tracking-widest">Configuración del servicio</p>
            </div>
            <a href="{{ path('app_admin_service_choose_type') }}" class="px-5 py-2 border border-stone-200 text-stone-500 text-[10px] font-bold uppercase tracking-widest rounded-xl hover:bg-stone-100 transition-all">
                ← Cambiar tipo
            </a>
        </div>

        {# Formulario #}
        <div class="bg-white/80 backdrop-blur-xl rounded-[2.5rem] shadow-[0_10px_40px_rgba(139,94,60,0.05)] border border-stone-100 p-6 md:p-10">

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                {# ── Campos comunes ── #}
                <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-2">Información General</p>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Precio base (€)</label>
                        {{ form_widget(form.basePrice, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                            'placeholder': 'Ej: 25.00'
                        }}) }}
                    </div>
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Duración</label>
                        {{ form_widget(form.duration, {'attr': {
                            'class': 'rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all'
                        }}) }}
                    </div>
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Aforo máximo</label>
                        {{ form_widget(form.maxAphor, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                            'placeholder': 'Ej: 12'
                        }}) }}
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Idioma</label>
                        {{ form_widget(form.leenguage, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all'
                        }}) }}
                    </div>
                    <div class="flex flex-col gap-2">
                        <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Burro asignado</label>
                        {{ form_widget(form.donkey, {'attr': {
                            'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all'
                        }}) }}
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label class="text-[10px] font-bold uppercase tracking-widest text-[#8B5E3C] ml-1">Descripción</label>
                    {{ form_widget(form.description, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] focus:ring-4 focus:ring-[#8B5E3C]/5 outline-none transition-all',
                        'rows': 3,
                        'placeholder': 'Describe el servicio…'
                    }}) }}
                </div>

                {# ── Campos específicos por tipo ── #}
                <div class="border-t border-stone-100 pt-6 mt-2">
                    <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-[#4A90A4] mb-4">
                        Campos específicos: {{ type_label }}
                    </p>

                    {% if type_key == 'tour' %}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Nombre del tour</label>
                                {{ form_widget(form.name, {'attr': {
                                    'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                    'placeholder': 'Ej: Ruta del Albaycín'
                                }}) }}
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Número de paradas</label>
                                {{ form_widget(form.stops, {'attr': {
                                    'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                    'placeholder': 'Ej: 5'
                                }}) }}
                            </div>
                        </div>
                        <div class="flex flex-col gap-2 mb-6">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Itinerario</label>
                            {{ form_widget(form.itinerary, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                'rows': 3,
                                'placeholder': 'Describe las paradas y el recorrido…'
                            }}) }}
                        </div>
                        <div class="flex flex-col gap-2 mb-6">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles adicionales</label>
                            {{ form_widget(form.details, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                'rows': 2
                            }}) }}
                        </div>
                        <div class="flex items-center justify-between px-5 py-3 bg-[#EBF4F6] rounded-xl border border-[#4A90A4]/10 group transition-colors">
                            <span class="text-[9px] font-bold uppercase tracking-widest text-[#4A90A4]">¿Incluye audio-guía?</span>
                            {{ form_widget(form.audioExplanation, {'attr': {
                                'class': 'w-5 h-5 text-[#4A90A4] border-none rounded focus:ring-0 cursor-pointer accent-[#4A90A4]'
                            }}) }}
                        </div>

                    {% elseif type_key == 'despedida' %}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Temática</label>
                                {{ form_widget(form.tematica, {'attr': {
                                    'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                    'placeholder': 'Ej: Western, Flamenca…'
                                }}) }}
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Lugar</label>
                                {{ form_widget(form.place, {'attr': {
                                    'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                    'placeholder': 'Ej: Sacromonte'
                                }}) }}
                            </div>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles adicionales</label>
                            {{ form_widget(form.details, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                'rows': 2
                            }}) }}
                        </div>

                    {% elseif type_key == 'therapy' %}
                        <div class="grid grid-cols-1 gap-6 mb-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Lugar de la sesión</label>
                                {{ form_widget(form.place, {'attr': {
                                    'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                    'placeholder': 'Ej: Finca El Olivar'
                                }}) }}
                            </div>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles adicionales</label>
                            {{ form_widget(form.details, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                'rows': 2
                            }}) }}
                        </div>

                    {% elseif type_key == 'sponsorship' %}
                        <div class="flex flex-col gap-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400 ml-1">Detalles del apadrinamiento</label>
                            {{ form_widget(form.details, {'attr': {
                                'class': 'w-full px-4 py-3 rounded-xl border border-stone-200 bg-stone-50/50 text-stone-800 font-bold focus:bg-white focus:border-[#8B5E3C] outline-none transition-all',
                                'rows': 3,
                                'placeholder': 'Incluir información sobre visitas, fotos, certificado…'
                            }}) }}
                        </div>
                    {% endif %}
                </div>

                {# Botón Submit #}
                <div class="pt-2 flex justify-center">
                    <button class="w-full max-w-md py-4 bg-[#8B5E3C] hover:bg-[#764f32] text-white font-bold text-[11px] uppercase tracking-[0.3em] rounded-2xl transition-all duration-300 shadow-md shadow-amber-900/20 transform hover:-translate-y-0.5 active:scale-95">
                        Crear Servicio
                    </button>
                </div>

            {{ form_end(form) }}
        </div>

        <p class="text-center mt-4 text-stone-300 text-[9px] font-bold uppercase tracking-[0.2em]">
            DonkeyTour CRM — Granada, España
        </p>
    </div>
</div>
{% endblock %}
