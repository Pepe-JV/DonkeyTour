{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block client_body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>BasePrice</th>
                <th>Description</th>
                <th>Duration</th>
                <th>MaxAphor</th>
                <th>Leenguage</th>
                <th>DeletedAt</th>
                <th>UpdatedAt</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.type }}</td>
                <td>{{ service.basePrice }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.duration ? service.duration|date('H:i:s') : '' }}</td>
                <td>{{ service.maxAphor }}</td>
                <td>{{ service.leenguage }}</td>
                <td>{{ service.deletedAt ? service.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}">Create new</a>
{% endblock %}
